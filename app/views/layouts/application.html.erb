<!DOCTYPE html>
<html>
<head>
  <title>Thrive</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= favicon_link_tag 'favicon.jpg' %>
  <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.15/angular-ui-router.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.5.0-beta.2/angular-resource.min.js"></script>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'list', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
  <body data-ng-app="list">
    <div class="nav">
      <span class="left-nav">
        <span class="nav-item"><%= link_to "Thrive", lists_path %></span>
        <!-- <span class="nav-item"><%= link_to "All Tasks", tasks_path %></span> -->
      </span>
      <span class="right-nav">
        <% if !current_user %>
          <span class="nav-item"><%= link_to "Sign Up", new_user_registration_path %></span>
          <span class="nav-item"><%= link_to "Sign In", user_session_path %></span>
        <% else %>
          <span class="nav-item"><%= link_to "Sign Out - #{current_user.email}", destroy_user_session_path, method: :delete %></span>
        <% end %>
      </span>
    </div>
    <div class="container">

      <%= yield %>

    </div>
  </body>
</html>
