<!DOCTYPE html>
<html>
<head>
  <title>Thrive</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <!-- Devise  gem -->
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>

  <!-- end of devise alerts -->

  <div class="nav">
    <div class="left-nav">
      <div class="nav-item"><%= link_to "Thrive", lists_path %></div>
      <div class="nav-item"><%= link_to "All Tasks", tasks_path %></div>
    </div>
    <div class="right-nav">
      <div class="nav-item">
        <% if !current_user %>
          <%= link_to "Sign Up", new_user_registration_path %>
          <%= link_to "Sing In", user_session_path %>
        <% else %>
          <%= link_to "Sign Out, #{current_user.email}", destroy_user_session_path, method: :delete %>
        <% end %>
    </div>
  </div>

  <div class="container">
    <%= yield %>
  </div>

</body>
</html>
